<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:layout_marginTop="30dp">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center">
        <ImageView
                android:id="@+id/img_balok"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/balok"
                android:layout_marginRight="50dp"/>
        <ImageView
                android:id="@+id/img_kubus"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/kubus"
                android:layout_marginLeft="50dp"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center">
        <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:text="BALOK"
                android:textAlignment="center"
                android:textSize="20dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#008577"
                android:layout_marginTop="15dp"
                android:layout_marginRight="50dp"/>
        <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:text="KUBUS"
                android:textAlignment="center"
                android:textSize="20dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#008577"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="50dp"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center">
        <ImageView
                android:id="@+id/img_kerucut"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/kerucut"
                android:layout_marginRight="50dp"/>
        <ImageView
                android:id="@+id/img_bola"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/bola"
                android:layout_marginLeft="50dp"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center">
        <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:text="KERUCUT"
                android:textAlignment="center"
                android:textSize="20dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#008577"
                android:layout_marginTop="15dp"
                android:layout_marginRight="50dp"/>
        <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:text="BOLA"
                android:textAlignment="center"
                android:textSize="20dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#008577"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="53dp"/>
    </LinearLayout>

</LinearLayout>